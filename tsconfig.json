{
    "compilerOptions": {
        "target": "es2021",
        "lib": ["es2021"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "#/*": ["scrips/*"],
            "?/*": ["test/*"]
        }
    },
    "ts-node": {
        "transpileOnly": true
    }
}
